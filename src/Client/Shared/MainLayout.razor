@using Client.Common
@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar>
        <MudContainer Class="fit-content">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
            Thinh's Homepage
        </MudContainer>
        <MudSpacer/>
        <IconLink Icon="@Icons.Custom.Brands.GitHub"
                  Href="https://github.com/ttran027/site"
                  TooltipText="GitHub Repository"
                  NewTab/>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium" Class="pt-5">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}