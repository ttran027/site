@page "/crypto"
@using Client.Components.Crypto.PricesTable
@using Client.Components.Crypto.GainCalculator
@using Client.Components.Menu
<MenuComponent Selected="@_menuItemSelected" SelectedItem="_selectedItem">
    <MenuItemComponent Icon="@Icons.Outlined.Calculate" Title="Calculate Gain" OnItemClicked="OnItemSelected">
        <GainCalculatorComponent/>
    </MenuItemComponent>
    <MenuItemComponent Icon="@Icons.Outlined.ShowChart" Title="Check Prices" OnItemClicked="OnItemSelected">
        <PricesTableComponent Assets="@_assets"
                              GetPrice="GetPriceAsync"/>
    </MenuItemComponent>
</MenuComponent>