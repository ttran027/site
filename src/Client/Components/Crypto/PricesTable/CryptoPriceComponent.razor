<MudContainer Class="d-flex flex-column align-end">
    @if(_loading)
    {
        <MudProgressCircular Size="Size.Small" Color="Color.Default" Indeterminate="true" />
    }
    else
    {
        @if (Price.Price is null)
        {
            <MudText>Unavailable</MudText>
        }else
        {
            <MudText Style="min-width: max-content;">@($"{Price.Price?.ToPrice()} {Price.Base}")</MudText>
            <MudText>@GetPercent(Price.PercentChange24Hour)</MudText>
        }     
    }      
</MudContainer>            