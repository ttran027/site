<MudButton StartIcon="@Icon"
           OnClick="OnClicked"
           Size="Size.Large"
           Class="mb-2"
           Color="Color.Primary"
           Variant="Variant.Filled">
    @Title
</MudButton>

@code {
    private bool _isOpened;

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Icon { get; set; }

    [Parameter]
    public EventCallback<RenderFragment> OnItemClicked { get; set; }

    [Parameter]
    [EditorRequired]
    public RenderFragment? ChildContent { get; set; }

    private void OnClicked()
    {
        OnItemClicked.InvokeAsync(ChildContent);
    }
}