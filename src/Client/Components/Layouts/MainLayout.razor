@using Client.Common
@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer/>
        <IconLink Icon="@Icons.Custom.Brands.GitHub"
                  Href="https://github.com/ttran027/site"
                  TooltipText="GitHub Repository"
                  NewTab/>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium" Class="pt-5">
            @Body
        </MudContainer>
    </MudMainContent>
    <MudHidden Breakpoint="Breakpoint.Xs" Invert>
        <MudAppBar Bottom>
            <MudSpacer/>
            <BottomNavButton Icon="@Icons.Filled.Home"
                            Href="home"
                            Name="Home"/>
            <MudSpacer/>
            <BottomNavButton Icon="@Icons.Filled.Calculate"
                            Href="calculators"
                            Name="Calculators"/>
            <MudSpacer/>
            <BottomNavButton Icon="@Icons.Filled.VideogameAsset"
                            Href="games"
                            Name="Games"/>
            <MudSpacer/>
            <BottomNavButton Icon="@Icons.Filled.QrCode2"
                            Href="qrcode"
                            Name="QR Code"/>
            <MudSpacer/>
        </MudAppBar>
    </MudHidden> 
</MudLayout>
@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}