@using Client.Common
@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer/>
        <IconLink Icon="@Icons.Custom.Brands.GitHub"
                  Href="https://github.com/ttran027/site"
                  TooltipText="GitHub Repository"
                  NewTab/>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenuBar Items="@_sideNavItems"/>
    </MudDrawer>
    <MudMainContent Style="padding-bottom: calc(var(--mud-appbar-height) - var(--mud-appbar-height)/8);">
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
    <NavMenuBar Items="@_bottomNavItems" Bottom/>
</MudLayout>

@code {
    private ICollection<NavMenuItem> _bottomNavItems = new List<NavMenuItem>()
    {
        new("Home", "home", Icons.Filled.Home, IsHome: true),
        new("Calculators", "calculators", Icons.Filled.Calculate, IsHome: false),
        new("Games", "games", Icons.Filled.VideogameAsset, IsHome: false),
        new("QR Code", "qrcode", Icons.Filled.QrCode2, IsHome: false),
    };

    private ICollection<NavMenuItem> _sideNavItems = new List<NavMenuItem>()
    {
        new("Home", "home", Icons.Filled.Home, IsHome: false),
        new("Calculators", "calculators", Icons.Filled.Calculate, IsHome: false),
        new("Games", "games", Icons.Filled.VideogameAsset, IsHome: false),
        new("QR Code", "qrcode", Icons.Filled.QrCode2, IsHome: false),
        new("About Me", "about", Icons.Filled.ContactPage, IsHome: false),
    };

    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}