@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar Class="d-flex justify-space-between">
        <MudContainer>
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
            Thinh's Homepage
        </MudContainer>
        <MudContainer Class="fit-content">
            <MudTooltip Text="GitHub Repository">
                <MudLink Href="https://github.com/ttran027/site">
                    <MudIcon Icon="@Icons.Custom.Brands.GitHub" Color="Color.Primary"/>
                </MudLink>
            </MudTooltip>
        </MudContainer>   
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium" Class="pt-5">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}